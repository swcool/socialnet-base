<!DOCTYPE HTML>
<html> 
  <head>
    <title><%= @title %></title> 
    <%= csrf_meta_tag %>
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body>
    <div id="whole_page">
        <%= render 'layouts/header' %>
	    <div id="nav">   	
		  <%= link_to_unless_current t('layouts.application.about_us'), about_path %> |
		  <%= link_to_unless_current t('layouts.application.help'), help_path %>
		</div>
        <div id="content">
          <% flash.each do |key, value| %>
            <div class="flash <%= key %>"><%= value %></div>
          <% end %>
	      <%= yield %>
	      
          <% if Rails.env.development? %> 
			<div id="debug" align="center"> 
			  <a href="#" onclick="Element.toggle('params_debug_info');return false"> 
			  params</a> | 
			  <a href="#" onclick="Element.toggle('session_debug_info');return false"> session</a> 
			  <fieldset id="params_debug_info" class="debug_info" style="display:none">
			 	<legend>params</legend>
				<%= debug(params) %> 
				</fieldset> 
				<fieldset id="session_debug_info" class="debug_info"
style="display:none"> 
				  <legend>sessions</legend>
				  <%= debug(session) %> 
				</fieldset>
			</div>
          <% end %>
	    </div>
      </div>
    </div>
  </body> 
</html>
