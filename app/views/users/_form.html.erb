<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <fieldset> 
	<legend><%= t('layouts.header.sign_up') %></legend>
	<div class="f_row">
      <%= f.label t('users.new.name') %> 
      <%= f.text_field :name, :size => 20, :maxlength => 40 %> 
    </div>

    <div class="f_row">
      <%= f.label t('users.new.email') %>
      <%= f.text_field :email, :size => 40, :maxlength => 60 %> 
    </div>
   
    <div class="f_row">
      <%= f.label t('users.new.password') %>
      <%= f.password_field :password, :size => 20, :maxlength => 40 %> 
    </div>
    
    <div class="f_row">
      <%= f.label t('users.new.confirmation') %>
      <%= f.password_field :password_confirmation, :size => 20, :maxlength => 40 %> 
    </div>

    <div class="f_action">
      <%= f.submit t('layouts.header.sign_up'), :class => "submit" %>
    </div>
 
  </fieldset>
<% end %>
